<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/layout_main_by_LinearLayout"
        tools:context=".Activity.MainActivity" android:background="#EFE5F7">

    <ImageView
            android:id="@+id/imageView"
            android:layout_width="180dp"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10dp"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/ic_logo" android:layout_marginTop="5dp"/>

    <com.google.android.material.tabs.TabLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="60dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_alignParentTop="true"
            app:tabBackground="@drawable/selector_tab"
            app:tabIndicatorHeight="0dp"
            android:id="@+id/tabLayout">
    </com.google.android.material.tabs.TabLayout>

    <View
            android:id="@+id/view_line"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_below="@id/tabLayout"
            android:background="@color/gray"/>
    <androidx.viewpager.widget.ViewPager
            android:id="@+id/viewPager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/view_line"
            android:layout_above="@id/imageView"
            android:background="@color/colorMain" android:layout_marginLeft="10dp" android:layout_marginTop="10dp"
            android:layout_marginStart="10dp" android:layout_marginRight="10dp" android:layout_marginEnd="10dp">
    </androidx.viewpager.widget.ViewPager>

</RelativeLayout>