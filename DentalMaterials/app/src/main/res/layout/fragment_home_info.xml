<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorMain">
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/button_unselected_state"
            android:clickable="true">

        <ImageButton
                android:id="@+id/button_close"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:background="@drawable/selector_info_close"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent" android:scaleType="fitXY"/>
        <TextView
                android:id="@+id/textView_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp" android:hint="title" app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent" android:layout_margin="20dp" android:textColor="@color/tab_text_color"/>
        <TextView
                android:id="@+id/textView_character"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:layout_below="@id/textView_title"
                app:layout_constraintTop_toBottomOf="@+id/textView_title"
                android:layout_margin="20dp"
                android:textColor="@color/tab_text_color"/>
        <TextView
                android:id="@+id/textView_time_job"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                app:layout_constraintTop_toBottomOf="@+id/textView_character" android:layout_margin="20dp"
                android:textColor="@color/tab_text_color"/>
        <TextView
                android:id="@+id/textView_time_stick"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                app:layout_constraintTop_toBottomOf="@+id/textView_time_job" android:layout_margin="20dp"
                android:textColor="@color/tab_text_color"/>
        <TextView
                android:id="@+id/textView_needs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp" app:layout_constraintTop_toBottomOf="@+id/textView_time_stick"
                android:layout_margin="20dp"
                android:textColor="@color/tab_text_color"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>